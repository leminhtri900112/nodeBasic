<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="/css/styles.css" />
    <link rel="stylesheet" href="https://www.w3schools.com/w3css/4/w3.css" />

    <title>Document</title>
  </head>
  <body>
    <div class="topnav">
      <a class="active" href="#home">Home</a>
      <a href="#news">News</a>
      <a href="#contact">Contact</a>
      <a href="#about">About</a>
    </div>
    <%= dataUser %>
    <div style="margin: 10px" class="w3-container">
      <h2>Users Table</h2>
      <table class="w3-table-all w3-hoverable">
        <thead>
          <tr class="w3-light-grey">
            <th>ID</th>
            <th>First Name</th>
            <th>Last Name</th>
            <th>Action</th>
          </tr>
        </thead>

        <tbody>
          <% for(let i=0; i < JSON.parse(dataUser).length; i++) { %>
          <tr>
            <td><%= JSON.parse(dataUser)[i].id%></td>
            <td><%= JSON.parse(dataUser)[i].firsname%></td>
            <td><%= JSON.parse(dataUser)[i].lastname %></td>
            <td>
              <a
                class="w3-button w3-green"
                href="/detail/user/<%= JSON.parse(dataUser)[i].id %>"
                target="_blank"
                >Detail</a
              >
              <a class="w3-button w3-yellow">Edit </a>
              <a class="w3-button w3-red">Delete</a>
            </td>
          </tr>

          <% } %>
        </tbody>
      </table>
    </div>
  </body>
</html>
