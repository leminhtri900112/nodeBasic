<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="/css/styles.css" />
    <link rel="stylesheet" href="https://www.w3schools.com/w3css/4/w3.css" />

    <title>Document</title>
  </head>
  <body>
    <div class="topnav">
      <a class="active" href="#home">Home</a>
      <a href="/upload">Upload file</a>
    </div>
    <!-- <%= dataUser %> -->
    <div style="margin: 10px" class="w3-container">
      <h2>Users Table</h2>
      <table class="w3-table-all w3-hoverable">
        <thead>
          <tr class="w3-light-grey">
            <th>ID</th>
            <th>First Name</th>
            <th>Last Name</th>
            <th>Action</th>
          </tr>
        </thead>

        <tbody>
          <% for(let i=0; i < JSON.parse(dataUser).length; i++) { %>
          <tr>
            <td><%= JSON.parse(dataUser)[i].id%></td>
            <td><%= JSON.parse(dataUser)[i].firsname%></td>
            <td><%= JSON.parse(dataUser)[i].lastname %></td>
            <td>
              <a
                class="w3-button w3-green"
                href="/detail/user/<%= JSON.parse(dataUser)[i].id %>"
                target="_blank"
                >Detail
              </a>
              <form
                action="/edit-user/<%= JSON.parse(dataUser)[i].id %>"
                method="get"
              >
                <button type="submit" class="w3-button w3-yellow">Edit</button>
              </form>
              <form action="/delete-user" method="post">
                <input
                  hidden
                  type="text"
                  name="deleteUser"
                  value="<%= JSON.parse(dataUser)[i].id %>"
                />
                <button type="submit" class="w3-button w3-red">Delete</button>
              </form>
            </td>
          </tr>

          <% } %>
        </tbody>
      </table>
    </div>
    <div style="text-align: center" class="w3-container">
      <h2>Create User Form</h2>
      <form action="/create-new-user" method="post">
        <label>First name:</label><br />
        <input type="text" name="firstName" /><br />
        <label>Last name:</label><br />
        <input type="text" name="lastName" /><br />
        <label>Email:</label><br />
        <input type="email" name="email" /><br />
        <label for="address">Address:</label><br />
        <input type="text" name="address" /><br /><br />
        <input type="submit" value="Submit" />
      </form>
    </div>
  </body>
</html>
